<section class="page-section clearfix">
  <div class="container">
    <div class="intro">
      <%= image_tag(@first_article.image, class: "intro-img img-fluid mb-3 mb-lg-0 rounded" ) %>
      <div class="intro-text left-0 text-center bg-faded p-5 rounded">
        <h2 class="section-heading mb-4">
          <span class="section-heading-upper"><%= @first_article.category.name %></span>
        </h2>
        <h2><%= @first_article.title %></h2>
        <p class="mb-3"><%= truncate(@first_article.description, length: 250) %></p>

      </div>
    </div>
  </div>
</section>

<section class="category_section">
  <div class="container">
    <div class="row">
      <% @articles.each do |article|%>
      <div class="col-lg 3 col-md-3 col-sm-12 col-xs-12 mt-4">
        <div class="card shadow-sm">
          <div class="overlay-effect h-100 w-100"></div>
          <%= image_tag(article.image, class: "img-fill" ) %>
          <div class="card-body">
            <div class="card-body-header">
              <h6 class="card-subtitle mb-2"><%= article.category.name %></h6>
            </div>
            <div class="card-body-footer">
              <h4 class="card-text"><%= link_to article.title,  article_path(article.id)%></h4>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>

<section class="articles_section mt-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% @articles.each do |article|%>
        <div class="post-preview">
          <div class="img-card">
            <h3 class="post-title"><%= link_to article.title,  article_path(article.id)%></h3>
            <h6 class="post-scategory"><%= article.category.name %></h6>
            <p class="post-meta">Posted on September 24, 2019</p>
          </div>
          <div class="post-card">
            <div class="post-img">
              <%= image_tag(article.image, class: "thumbnail" ) %>
            </div>
            <p class="post-meta"><%= truncate(article.description, length: 400) %></p>
          </div>
        </div>
        <hr>
        <% end %>
      </div>
    </div>
  </div>
</section>
