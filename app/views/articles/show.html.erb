<section id="about">
  <div class="container">
    <div class="row">
      <div class="mx-auto" style="width:80%; height: auto">
        <div class="col-lg-12">
          <%= image_tag(@article.image, style: "width:100%" ) %>
          <div class="container text-center">
            <p class="lead">Category: <%= @article.category.name %></p>
             <h1><%= @article.title %></h1>
             <p class="text-muted">Posted by <%= current_user.email %> at <%= @article.created_at %></p>
           </div>
        </div>
      </div>

      <div class="col-lg-8 mx-auto">
        <p><%= @article.description %></p>
      </div>

      <div class="col-lg-8 mx-auto">
        <% if current_user %>
        <%= link_to 'Edit', edit_article_path(@article) %> |
        <%= link_to 'Back', articles_path %>
        <% else %>
            <%= link_to 'Rate Article', "#" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
