<section id="about">
  <div class="container">
    <div class="row">
      <div class="mx-auto" style="width:80%; height: auto">
      <div class="col-lg-12 mx-auto">
        <div class="mt-4">
          <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
        </div>
        <p id="notice"><%= notice %></p>
        <h1>Articles</h1>

        <% @articles.each do |article| %>

        <div class="card mb-4">
          <div class="card-body">
            <h2 class="card-title"><%= link_to article.title, article %></h2>
            <p>Posted on <%= article.created_at %></p>
            <div class="article-body">
              <%= image_tag(article.image, style: "width:200px") %>
              <p class="card-text pl-5"><%= truncate(article.description, length: 350) %></p>
            </div>
          </div>
          <div class="card-footer text-muted">

            <%= link_to 'Show', article, class: 'card-link' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'card-link' %>
            <%= link_to 'Destroy', article, class: 'card-link', method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
