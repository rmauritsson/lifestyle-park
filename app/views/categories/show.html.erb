<section id="about">
  <div class="container">
    <div class="row">
      <div class="mx-auto" style="width:80%; height: auto">
      <div class="col-lg-8 mx-auto">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Name:</strong>
          <%= @category.name %>
        </p>

        <p>
          <strong>Priority:</strong>
          <%= @category.priority %>
        </p>
      </div>

      <div class="col-lg-8 mx-auto">
        <%= link_to 'Edit', edit_category_path(@category) %> |
        <%= link_to 'Back', categories_path %>
      </div>
    </div>
  </div>
</section>
